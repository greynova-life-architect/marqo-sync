# Marqo server URL
MARQO_URL=http://localhost:8882

# Server configuration
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8000
FRONTEND_DEV_PORT=3000
HEALTH_SERVER_HOST=localhost
HEALTH_CHECK_PORT=8080

# Configuration files
SYNC_CONFIG_FILE=marqo-sync-config.yaml
CHUNKING_CONFIG_FILE=
DEFAULT_CONFIG_FILE=marqo-sync-config.yaml

# Legacy configuration (for backward compatibility)
SYNC_SOURCE_DIR=./data
SYNC_INDEX_NAME=deepcache
SYNC_MAX_FILE_SIZE=1048576
SYNC_STORE_LARGE_FILES_META=true
SYNC_SKIP_DIRS=compiled,bin,obj,build,dist,node_modules,__pycache__,.git,.idea,.vscode,.vs,venv,Debug,Release,x64,x86

# Unified codebase configuration - all projects go into single 'codebase' index
# Format: name1:path1,name2:path2,...
# Example: project1:/path/to/project1,project2:/path/to/project2
# Creates: codebase index with project_id metadata for filtering
SYNC_CODEBASES=project-a:./projects/project-a,project-b:./projects/project-b

# Unified codex configuration - all projects go into single 'codex' index  
# Format: name1:path1,name2:path2,...
# Example: project1:/path/to/project1,project2:/path/to/project2
# Creates: codex index with project_id metadata for filtering
SYNC_CODEX=project-a:./projects/project-a,project-b:./projects/project-b

# Unified conversation configuration - all types go into single 'conversations' index
# Format: type1:path1,type2:path2,...
# Supported types: chatgpt, claude, all
# Example: chatgpt:/path/to/chatgpt/logs,claude:/path/to/claude/logs
# Creates: conversations index with conversation_type metadata for filtering
SYNC_CONVERSATIONS=chatgpt:./data/chatgpt,claude:./data/claude

# Advanced options
# Force recreation of all indexes (WARNING: This will DELETE ALL DATA!)
# Only use this if you need to completely reset your indexes
FORCE_INDEX_RECREATE=false

# File watcher options
# Use polling observer for file watching (useful on Windows)
WATCHDOG_USE_POLLING=false